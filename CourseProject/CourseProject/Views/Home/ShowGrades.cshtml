                            <a class="dropdown-item" href="course_details.html">11659</a>
                        </div>
                    </li>-->
                </ul>
            </div>

        </div>
        <div class="col-9">
            <div class="container">
                <div class="row">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Course name</th>
                                <th scope="col">Grade</th>
                                <th width="20%" scope="col">Date</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                             {
                                <tr>
                                    <th><a href="#">@item.Lesson.Course.Name</a></th>
                                    <td>@item.Value</td>
                                    <td width="20%">@item.Date</td>
                                </tr>
                             }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>