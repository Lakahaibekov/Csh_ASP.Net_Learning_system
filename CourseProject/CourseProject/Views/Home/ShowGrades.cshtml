@model IEnumerable<CourseProject.Models.Grade>
@{
    ViewBag.Title = "ShowGrades";
}

<div class="card mt-3 mb-3" id="header_card">
    <div class="card-body">
        <div class="form-group">
            <div class="row" style="margin-left: 20px">
                <img src="https://dl.iitu.kz/theme/image.php/classic/core/1602665137/u/f1" width="100" height="100" style="border-radius: 50%">
                @foreach (var item in Model)
                {
                    <h2 style="padding-left: 20px; padding-top: 25px;">@item.Student.Name @item.Student.Surname (@item.Student.Login)</h2>
                    break;
                }
            </div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb" style="background-color: white">
                    <li class="breadcrumb-item"><a href="/Home/TeacherPage">Teacher Page</a></li>
                    <li class="breadcrumb-item"><a href="/Home/LessonDetails/?lessonId=@ViewBag.lesson.Id">Lesson Details</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Show Grade</li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewBag.lesson.Course.Name</li>
                </ol>
            </nav>
        </div>
    </div>
</div>



<div class="container-fluid">
    <div class="row">
        <div class="col-2">
            <div class="card-body p-3">
                <h5 class="card-title">Navigation</h5>
            </div>
            <div class="card-text content">
                <ul class="list-group">
                    <li class="list-item-group"><a href="/Home/TeacherPage">Teacher Page</a></li>
                    <li class="list-item-group"><a href="/Home/LessonDetails/?lessonId=@ViewBag.lesson.Id">Lesson Details</a></li>
                    <li class="list-item-group"><a href="#">Show Grade</a></li>
