@model IEnumerable<CourseProject.Models.Student>

@{
    ViewBag.Title = "LessonDetails";
}

<div class="card mt-3 mb-3" id="header_card">
    <div class="card-body">
        <div class="form-group">
            @foreach (var item in Model)
            {
                <h2 style="margin-left: 20px"><i class="fa fa-users" aria-hidden="true"></i> @item.Group.Name class students</h2>
                break;
            }
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb" style="background-color: white">
                    <li class="breadcrumb-item"><a href="/Home/TeacherPage">Teacher Page</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Lesson Details</li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewBag.lesson.Course.Name</li>
                </ol>
            </nav>
        </div>
    </div>
</div>



<div class="container-fluid">
    <div class="row">
        <div class="col-2">
            <div class="card-body p-3">
                <h5 class="card-title">Navigation</h5>
            </div>
            <div class="card-text content">
                <ul class="list-group">
                    <li class="list-item-group"><a href="/Home/TeacherPage">Teacher Page</a></li>
                    <li class="list-item-group"><a href="#">Lesson Details</a></li>
                    <li class="list-item-group">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @foreach (var item in Model)
                            {
                                <span>@item.Group.Name students</span> 
                                break;
                            }
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @foreach (var item in Model)
                            {
                                <a class="dropdown-item" href="#">@item.Name @item.Surname</a>
                            }
                        </div>
                    </li>




                </ul>
            </div>

        </div>
        <div class="col-9">
            <div class="container">


                <div class="row">
                    <ul class="list-group list-group-flush list-fluid">
                        @foreach (var item in Model) {
                            <li class="list-group-item">
                                <p><a href="#" class="a_data"><img src="https://dl.iitu.kz/theme/image.php/classic/core/1602665137/i/course"> @item.Login @item.Name @item.Surname</a></p>
                                <ul class="list-group">
                                    <li class="list-item-group">
                                        <form action="/Home/PutGrade/" method="get">
                                            <input type="hidden" name="lessonId" value="@ViewBag.lessonId" />  
                                            <input type="hidden" name="studentId" value="@item.Id" />
                                            <button type="submit" class="btn btn-success btn-sm">Put Grade</button>

                                        </form>
                                    </li>
                                    <li class="list-item-group">
                                        <form action="/Home/ShowGrades/" method="get">
                                            <input type="hidden" name="lessonId" value="@ViewBag.lessonId" />
                                            <input type="hidden" name="studentId" value="@item.Id" />
                                            <button type="submit" class="btn btn-primary btn-sm">Show Grades</button>
                                        </form>
                                    </li>
                                    
                                </ul>

                        </li>
                        }
                    </ul>

                </div>
            </div>
        </div>
    </div>
</div>