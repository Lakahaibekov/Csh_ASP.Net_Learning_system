@model IEnumerable<CourseProject.Models.Student>

@{
    ViewBag.Title = "LessonDetails";
}

<h2>LessonDetails</h2>

<h2>@ViewBag.lessonId</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                <form action="/Home/PutGrade/" method="get">
                    <input type="hidden" name="lessonId" value="@ViewBag.lessonId" />
                    <input type="hidden" name="studentId" value="@item.Id" />
                    <button type="submit" class="btn-link">Put Grade</button>
                </form>
                <form action="/Home/ShowGrades/" method="get">
                    <input type="hidden" name="lessonId" value="@ViewBag.lessonId" />
                    <input type="hidden" name="studentId" value="@item.Id" />
                    <button type="submit" class="btn-link">Show Grades</button>
                </form>
            </td>
        </tr>
    }

</table>
