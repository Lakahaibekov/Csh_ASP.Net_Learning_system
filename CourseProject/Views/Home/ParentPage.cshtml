@model CourseProject.Models.GradeListViewModel

@{
    ViewBag.Title = "ParentPage";
}

<form method="get" action="/Home/ParentPage/">
    <div class="form-inline">
        <label class="control-label">Parent: </label>
        @Html.DropDownList("Parent", Model.Parents as SelectList,
                htmlAttributes: new { @class = "form-control" })

        <input type="submit" value="Фильтр" class="btn btn-default" />
    </div>
</form>
<br>
<table class="table">
    <tr>
        <th>
            <label>SchoolKid name:</label>
        </th>
        <th>
            <label>Subject:</label>
        </th>
        <th>
            <label>Value:</label>
        </th>
        <th>
            <label>Date:</label>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Grades)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lesson.Course.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lesson.Group.Name) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>


