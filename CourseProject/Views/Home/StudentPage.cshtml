@model CourseProject.Models.GradeListViewModel
@{
    ViewBag.Title = "StudentPage";
}



<form method="get" action="/Home/StudentPage/">
    <div class="form-inline">
        <label class="control-label">Ученик: </label>
        @Html.DropDownList("Student", Model.Students as SelectList,
                htmlAttributes: new { @class = "form-control" })

        <input type="submit" value="Фильтр" class="btn btn-default" />
    </div>
</form>
<br />
<table class="table">
    <tr>
        <th>
            <label>SchoolKid name:</label>
        </th>
        <th>
            <label>Subject:</label>
        </th>
        <th>
            <label>Value:</label>
        </th>
        <th>
            <label>Date:</label>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Grades)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lesson.Course.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lesson.Group.Name)
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
